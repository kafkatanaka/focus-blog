---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSense from '../components/AdSense.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  category?: string;
  tags?: string[];
  ads?: boolean;
  canonicalURL?: URL;
  ogImage?: string;
  /** サムネイル画像のパス（例: /images/thumbnails/slug.webp）。指定時のみタイトル直下に表示 */
  thumbnailPath?: string;
}

const { title, description, pubDate, updatedDate, category, tags = [], ads = true, canonicalURL, ogImage, thumbnailPath } = Astro.props;

const publishedDate = new Date(pubDate);
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL} ogImage={ogImage}>
  <Header />
  <main class="mx-auto max-w-readable px-4 py-8 sm:px-6">
    <article>
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{title}</h1>
        {thumbnailPath && (
          <img
            src={thumbnailPath}
            alt=""
            class="mt-4 w-full rounded-lg object-cover aspect-[1200/630] max-h-[320px]"
            width="1200"
            height="630"
            loading="eager"
            fetchpriority="high"
            onerror="this.onerror=null;this.src='/images/thumbnails/placeholder.webp'"
          />
        )}
        <div class="mt-4 flex flex-wrap items-center gap-4 text-sm text-gray-500">
          <time datetime={publishedDate.toISOString()}>
            {publishedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          {updatedDate && (
            <span> · Updated {new Date(updatedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          )}
          {category && (
            <a
              href={`/${category}`}
              class="rounded bg-gray-100 px-2 py-1 text-gray-700 transition-colors hover:bg-gray-200 capitalize"
            >
              {category}
            </a>
          )}
        </div>
      </header>

      {ads && <AdSense slot="4412571347" format="auto" />}

      <div class="prose prose-lg prose-gray max-w-none prose-headings:font-serif prose-p:leading-relaxed prose-a:text-gray-900 prose-a:underline hover:prose-a:no-underline">
        <slot />
      </div>

      {ads && <AdSense slot="4412571347" format="auto" />}

      {tags.length > 0 && (
        <footer class="mt-12 border-t border-gray-200 pt-8">
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/blog?tag=${encodeURIComponent(tag)}`}
                class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 transition-colors hover:bg-gray-200"
              >
                #{tag}
              </a>
            ))}
          </div>
        </footer>
      )}
    </article>
  </main>
  <Footer />
</BaseLayout>
