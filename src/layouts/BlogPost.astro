---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSense from '../components/AdSense.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  canonicalURL?: URL;
  ogImage?: string;
}

const { title, description, pubDate, updatedDate, tags, canonicalURL, ogImage } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL} ogImage={ogImage}>
  <Header />
  <main class="mx-auto max-w-readable px-4 py-8 sm:px-6">
    <article>
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{title}</h1>
        <div class="mt-4 flex flex-wrap gap-2 text-sm text-gray-500">
          <time datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          {updatedDate && (
            <span> Â· Updated {updatedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          )}
          {tags && tags.length > 0 && (
            <span class="ml-2">
              {tags.map((tag) => (
                <a href={`/blog?tag=${encodeURIComponent(tag)}`} class="rounded bg-gray-100 px-2 py-0.5 text-gray-700 hover:bg-gray-200">
                  {tag}
                </a>
              ))}
            </span>
          )}
        </div>
        <div class="mt-6">
          <AdSense slot="auto" format="auto" />
        </div>
      </header>
      <div class="prose prose-gray max-w-none prose-headings:font-serif prose-p:leading-relaxed prose-a:text-gray-900 prose-a:underline hover:prose-a:no-underline">
        <slot />
      </div>
      <footer class="mt-12 border-t border-gray-200 pt-8">
        <AdSense slot="auto" format="auto" />
      </footer>
    </article>
  </main>
  <Footer />
</BaseLayout>
