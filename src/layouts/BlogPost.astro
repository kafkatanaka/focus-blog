---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSense from '../components/AdSense.astro';
import RelatedReading from '../components/RelatedReading.astro';
import type { RelatedPostItem } from '../lib/related-posts';

interface Props {
  title: string;
  description: string;
  pubDate?: Date;
  updatedDate?: Date;
  category?: string;
  tags?: string[];
  ads?: boolean;
  canonicalURL?: URL;
  ogImage?: string;
  /** サムネイル画像のパス（例: /images/thumbnails/slug.webp）。指定時のみタイトル直下に表示 */
  thumbnailPath?: string;
  /** 関連記事（slug + title + thumbnailPath）。未指定または空の場合は表示しない */
  relatedPosts?: RelatedPostItem[];
}

const { title, description, category, tags = [], ads = true, canonicalURL, ogImage, thumbnailPath, relatedPosts = [] } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalURL={canonicalURL} ogImage={ogImage}>
  <Header />
  <main class="mx-auto max-w-readable px-4 py-8 sm:px-6">
    <article>
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{title}</h1>
        {thumbnailPath && (
          <img
            src={thumbnailPath}
            alt=""
            class="mt-4 w-full rounded-lg object-cover aspect-[1200/630] max-h-[320px]"
            width="1200"
            height="630"
            loading="eager"
            fetchpriority="high"
            onerror="this.onerror=null;this.src='/images/thumbnails/placeholder.webp'"
          />
        )}
        {category && (
        <div class="mt-4 flex flex-wrap items-center gap-4 text-sm text-gray-500">
          <a
            href={`/${category}`}
            class="rounded bg-gray-100 px-2 py-1 text-gray-700 transition-colors hover:bg-gray-200 capitalize"
          >
            {category}
          </a>
        </div>
        )}
      </header>

      {ads && <AdSense slot="4412571347" format="auto" />}

      <div class="prose prose-lg prose-gray max-w-none prose-headings:font-serif prose-p:leading-relaxed prose-a:text-gray-900 prose-a:underline hover:prose-a:no-underline">
        <slot />
      </div>

      <style is:global>
        /* 書籍カバー画像（rehype で .book-cover を付与）: モバイルは80%、デスクトップは程よい大きさ */
        .prose img.book-cover {
          display: block;
          width: 80%;
          max-width: 80%;
          height: auto;
          margin-left: auto;
          margin-right: auto;
          border-radius: 0.375rem;
          aspect-ratio: 2 / 3;
          object-fit: contain;
        }
        @media (min-width: 640px) {
          .prose img.book-cover {
            max-width: 320px;
            width: auto;
          }
        }
      </style>

      {ads && <AdSense slot="4412571347" format="auto" />}

      {tags.length > 0 && (
        <footer class="mt-12 border-t border-gray-200 pt-8">
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`/tag/${encodeURIComponent(tag)}`}
                class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 transition-colors hover:bg-gray-200"
              >
                #{tag}
              </a>
            ))}
          </div>
        </footer>
      )}

      <RelatedReading posts={relatedPosts} />
    </article>
  </main>
  <Footer />
</BaseLayout>
