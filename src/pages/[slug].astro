---
import BlogPost from '../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';
import { getRelatedPosts } from '../lib/related-posts';
import { relatedMap } from '../data/related-map';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  // Exclude category pages from slug routing
  const reservedSlugs = ['focus', 'work', 'money', 'habits', 'about', 'articles', 'framework'];
  return posts
    .filter((entry) => !reservedSlugs.includes(entry.slug))
    .map((entry) => {
      const relatedPosts = getRelatedPosts(
        entry.slug,
        entry.data.tags ?? [],
        posts,
        relatedMap
      );
      return {
        params: { slug: entry.slug },
        props: { entry, relatedPosts },
      };
    });
}

const { entry, relatedPosts } = Astro.props;
const { Content } = await entry.render();
const site = Astro.site ?? new URL('https://focus.matomeyo.me');
const canonicalURL = new URL(`/${entry.slug}`, site);

const thumbnailPath = entry.data.thumbnail
  ? `/images/thumbnails/${entry.data.thumbnail}`
  : `/images/thumbnails/${entry.slug}.webp`;
const ogImage = new URL(thumbnailPath, site).href;
---

<BlogPost
  title={entry.data.title}
  description={entry.data.description}
  pubDate={entry.data.pubDate}
  updatedDate={entry.data.updatedDate}
  category={entry.data.category}
  tags={entry.data.tags}
  ads={entry.data.ads}
  canonicalURL={canonicalURL}
  ogImage={ogImage}
  thumbnailPath={thumbnailPath}
  relatedPosts={relatedPosts}
>
  <Content />
</BlogPost>
