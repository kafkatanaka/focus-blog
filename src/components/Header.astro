---
const currentPath = Astro.url.pathname;
---

<header class="border-b border-gray-200 bg-white">
  <nav class="mx-auto flex max-w-readable items-center justify-between px-4 py-4 sm:px-6" aria-label="Main navigation">
    <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700">
      The Focus Dividend
    </a>
    <ul class="flex gap-6 text-sm">
      <li>
        <a
          href="/focus"
          class:list={[currentPath === '/focus' && 'text-gray-900 font-medium', currentPath !== '/focus' && 'text-gray-600 hover:text-gray-900']}
        >
          Focus
        </a>
      </li>
      <li>
        <a
          href="/work"
          class:list={[currentPath === '/work' && 'text-gray-900 font-medium', currentPath !== '/work' && 'text-gray-600 hover:text-gray-900']}
        >
          Work
        </a>
      </li>
      <li>
        <a
          href="/money"
          class:list={[currentPath === '/money' && 'text-gray-900 font-medium', currentPath !== '/money' && 'text-gray-600 hover:text-gray-900']}
        >
          Money
        </a>
      </li>
      <li>
        <a
          href="/habits"
          class:list={[currentPath === '/habits' && 'text-gray-900 font-medium', currentPath !== '/habits' && 'text-gray-600 hover:text-gray-900']}
        >
          Habits
        </a>
      </li>
    </ul>
  </nav>
</header>
