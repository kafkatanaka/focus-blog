---
const currentPath = Astro.url.pathname;
---

<header class="border-b border-gray-200 bg-white">
  <nav class="mx-auto flex max-w-readable items-center justify-between px-4 py-4 sm:px-6" aria-label="Main navigation">
    <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700">
      The Focus Dividend
    </a>
    <ul class="flex gap-6 text-sm">
      <li>
        <a
          href="/"
          class:list={[currentPath === '/' && 'text-gray-900 font-medium', currentPath !== '/' && 'text-gray-600 hover:text-gray-900']}
        >
          Home
        </a>
      </li>
      <li>
        <a
          href="/blog"
          class:list={[currentPath.startsWith('/blog') && 'text-gray-900 font-medium', !currentPath.startsWith('/blog') && 'text-gray-600 hover:text-gray-900']}
        >
          Blog
        </a>
      </li>
      <li>
        <a
          href="/about"
          class:list={[currentPath === '/about' && 'text-gray-900 font-medium', currentPath !== '/about' && 'text-gray-600 hover:text-gray-900']}
        >
          About
        </a>
      </li>
    </ul>
  </nav>
</header>
